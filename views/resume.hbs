<!DOCTYPE html>
<html>
<head>
  <title>Steven</title>
  {{>globalScript}}

    <script>
        $(document).ready(function() {
            $(".pdfBlocker").click(function () {
                if (!$(this).hasClass("active")) {
                    $(this).addClass("active");
                }
            });
        });
    </script>
    <style>
        /*PDF*/
        .pdfobject-container { 
            height: 600px;
        }
        .pdfBlocker { 
            height: auto;
            width: 80%;
            position: relative;
            margin: 0 auto;
            margin-top: 30px;
        }
        .pdfBlocker a{
            position: absolute; 
            height: 100%;
            width: 100%;
            z-index: 2;
            background-color:rgba(192,192,192,0.3);
            cursor: pointer;
            display: block;
        }
        .pdfBlocker:hover a{
            background-color:rgba(99,99,99,0.3);
            border: 2px solid black;
        }
        .pdfBlocker.active:hover a{
            display: none;
        }
        .pdfobject { border: 1px solid #666; }
    </style>
</head>
<body>
    {{>navigationBar}}
    <div class="ui fluid main container">
        <div class="ui padded centered grid">
            <div class="row">
                <div class="eight wide column padded">
                    <div class="ui padded segment">
                        <h2 class="ui dividing header">
                            {{pageTitle}}
                        </h2>
                        {{!-- {{{contents}}} --}}
                        <div class="pdfBlocker"><a></a><div id="pdfContainer"></div></div>
                        <script src="pdfObject/pdfobject.js"></script>
                        <script>
                                var options = {
                                    pdfOpenParams: { zoom: "70%" },
                                };
                                PDFObject.embed("resource/STEVEN-Software.pdf", "#pdfContainer", options);
                                
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}

</body>
</html>
